{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "@nuxtjs/eslint-config-typescript",
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:vue/recommended",
    "prettier/vue"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    // "parser": "babel-eslint"
  },
  "overrides": [
    {
      "files": ["resources/**/*.js", "resources/**/*.ts", "resources/**/*.vue"],
      "rules": {
        "strict": 0,
        "prettier/prettier": [
          "error",
          {
            "singleQuote": true,
            "trailingComma": "es5",
            "semi": false,
            "endOfLine": "lf"
          }
        ]
      }
    }
  ]
}
